worker_processes  1;

error_log  logs/error.log;

events {
    worker_connections  1024;
}

http {
    passenger_root <%= fetch(:passenger_root, '/usr/lib/ruby/vendor_ruby/phusion_passenger/locations.ini') %>;
    passenger_ruby <%= fetch(:passenger_ruby, '~/.rvm/wrappers/ruby-2.1.1/ruby') %>;
    include       mime.types;
    default_type  application/octet-stream;

    #log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
    #                  '$status $body_bytes_sent "$http_referer" '
    #                  '"$http_user_agent" "$http_x_forwarded_for"';

    #access_log  logs/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    #gzip  on;

    server {
        listen       80;
        server_name  _;
        root <%= current_path %>/public;
        passenger_enabled on;
        rails_env <%= fetch(:stage) %>;
    }
    #passenger_pre_start <%= fetch(:passenger_pre_start) %>;
}
